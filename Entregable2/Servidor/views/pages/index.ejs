	<%- contentFor('hero') %>
	<section class="hero">
		<div class="hero-content">
			<h2>Bienvenido a SEGAP USM</h2>
			<p> </p>

			<a href="/register" class="btn btn-lg btn-primary">Registrarse</a>
			<a href="/contact" class="btn btn-lg btn-primary">Contáctanos</a>
		</div>
	</section>

	<div class="main">
		<div class="login col-md-6 col-md-offset-3"">
				<div class="text-primary text-justify">
					<h4 class="info" > USUARIOS REGISTRADOS </h4>
				</div>
				<br>
				<form class="auth_form" name="login" id="login" method="POST" action="/profile">
					<div class="form-group">
						<label for="user"><span class="glyphicon glyphicon-user"></span> Usuario </label> <br>
						<input class="form_user inputtext form-control" type="text" name="user" id="username" 
						required="required" maxlength="255" placeholder="Usuario" />
					</div>

					<div class="form-group">
						<label for="Password"><span class="glyphicon glyphicon-lock"></span> Contraseña </label> <br>
						<input class="form_pass inputtext form-control" type="password" name="password" id="password"  
						required="required" maxlength="20" placeholder="Contraseña" />
					</div>

					<div class="form-group">
						<input type="submit" name="login" value="Entrar" class="btn btn-primary"> 
						</input>
					</div>
					<a class="help-block" href="/forgot"> ¿Olvidó su contraseña? </a>
				</form>
		</div>
	</div>
